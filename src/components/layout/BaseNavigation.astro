---
interface Props {
  pageTitle?: string;
}

const socialIcons = [
  {
    name: 'GitHub',
    url: 'https://github.com/timrbula',
    icon: 'i-uil-github-alt',
  },
  {
    name: 'Bluesky',
    url: 'https://bsky.app/profile/timrbula.com',
    icon: 'i-uil-brain',
  },
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/in/timothy-bula-90a33b44/',
    icon: 'i-uil-linkedin-alt',
  },
  { name: 'RSS', url: '/feed.xml', icon: 'i-uil-rss' },
];

const { pageTitle } = Astro.props;
---

<header class='border-b-4 border-black flex justify-between p-6 items-center'>
  {pageTitle && <h1 class='hidden'>{pageTitle}</h1>}
  <a href='/' title='Back to Home'>
    <p class='righteous md:text-5xl'>timrbula.com</p>
  </a>
  <nav class='hidden md:inline-block'>
    <h2 class='hidden'>Navigation</h2>
    <ul class='flex gap-8 poppins'>
      {
        socialIcons.map((item) => (
          <li>
            <a
              href={item.url}
              class='hover:text-pink hover:underline transition-all duration-150 ease-in-out'
              target='_blank'
              title={`${item.name}`}
            >
              <div class:list={[item.icon, 'w-6 h-6']} />
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
