---
import Layout from '@layouts/Default.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Card, Button } from '@eliancodes/brutal-ui';

const socialLinks= [
  {
    name: 'GitHub',
    url: 'https://github.com/timrbula',
  },
  {
    name: 'Bluesky',
    url: 'https://bsky.app/profile/timrbula.com',
  },
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/in/timothy-bula-90a33b44/',
  }
];


---

<Layout
  title='Home'
  pageTitle='timrbula |Â Home'
  description='My home in the digital world.'
>
  <main class='bg-pink p-6 h-full'>
    <section id='about' class='grid grid-cols-4 gap-4 mt-4 max-w-256 m-auto'>
      <h2 class='hidden'>About</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='my-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              The web home for <span
                class='text-white'
                >timrbula</span
              >
            </p>
          </div>
        </Card>
      </div>
      <div class='col-span-4 outfit'>
        <Card><p class="text-6">Hi! I'm Tim. I hope this site finds you well. I'm currently working as a research engineer at <a class="underline" href="https://research.ibm.com/">IBM Research </a>focusing on code LLMs. New York City is where I call home and I'm interested in music, politics, and basketball. I'm a proud graduate of the public universities Georgia Tech and UT Austin. At the moment, I'm trying to get marginally better at Spanish and piano.</p></Card>
    </div>
    <div class="col-span-4 flex gap-4">
      {socialLinks.map(link => {
          return <Button href={link.url}>{link.name}</Button>
      })}
    </div>
    </section>
  </main>
</Layout>
